{
    "$schema": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/strict.json#",
    "title": "JSON Schema to validate an API Validator plan",
    "id": "core://default.api/plan#",
    "type": "object",
    "required": ["requestYaml", "planName"],
    "additionalProperties": false,
    "properties": {
        "requestYaml": {
            "type": "string"
        },
        "prefix": {
            "type": "string"
        },
        "requestConfig": {
            "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/requests.json#/definitions/requestConfig"
        },
        "schemaDir": {
            "type": "string"
        },
        "reportJSON": {
            "type": "string"
        },
        "requestHelper": {
            "type": "string",
            "default": "./requestHelper"
        },
        "concurrency": {
            "allOf": [
                {"$ref": "http://json-schema.org/draft-04/schema#/definitions/positiveInteger"},
                {"default": 2}
            ]
        },
        "schemas": {
            "type": "object"
        },
        "tasks": {
            "type": "object"
        },
        "pass": {
            "enum": [false]
        },
        "planName": {
            "type": "string"
        },
        "verbose": {
            "enum": [true, 1, 2]
        }
    },
    "definitions": {
    }
}
