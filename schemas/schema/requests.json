{
    "$schema": "core://default.api/strict#",
    "title": "JSON Schema to validate an API Validator request list",
    "id": "core://default.api/requests#",
    "allOf": [
        { "$ref": "core://default.api/common#/definitions/uniqueArray" },
        {
            "items": {
                "oneOf": [
                   { "$ref": "#/definitions/request" },
                   { "$ref": "#/definitions/yqlrequest" }
                ]
            }
        }
    ],
    "definitions": {
        "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "DELETE"]
        },
        "yqlrequest": {
            "required": ["yql"],
            "dependencies": {
                "yql": {
                    "$ref": "#/definitions/requestConfig",
                    "required": ["yqlConfig"]
                }
            }
        },
        "request": {
            "required": [ "url" ],
            "dependencies": {
                "url": { "$ref": "#/definitions/requestConfig" }
            }
        },
        "requestConfig": {
            "type": "object",
            "properties": {
                "url": {
                    "format": "uri"
                },
                "timeout": {
                    "$ref": "http://json-schema.org/draft-04/schema#/definitions/positiveInteger"
                },
                "qs": {
                    "type": "object"
                },
                "method": {
                    "$ref": "#/definitions/method"
                },
                "yql": {
                    "$ref": "core://yahoo.com/yql#/definitions/statement"
                },
                "yqlConfig": {
                    "$ref": "#/definitions/yqlConfig"
                },
                "schema": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "yqlConfig": {
            "type": "object",
            "properties": {
                "endpoint": {
                    "type": "string",
                    "default": "https://query.yahooapis.com/v1/public/yql"
                }
            }
        },
        "processed": {
            "allOf": [
                { "$ref": "core://default.api/common#/definitions/uniqueArray" },
                {
                    "items": { "$ref": "#/definitions/request" }
                }
            ]
        }
    }
}
