{
    "$schema": "core://default.api/strict#",
    "title": "JSON Schema to validate an API Validator plan",
    "id": "core://default.api/plan#",
    "type": "object",
    "required": ["requestYaml", "planName"],
    "additionalProperties": false,
    "properties": {
        "requestYaml": {
            "type": "string"
        },
        "prefix": {
            "type": "string"
        },
        "requestConfig": {
            "$ref": "core://default.api/requests#/definitions/requestConfig"
        },
        "schemaDir": {
            "type": "string"
        },
        "reportJSON": {
            "type": "string"
        },
        "requestHelper": {
            "type": "string",
            "default": "./requestHelper"
        },
        "schemas": {
            "type": "object"
        },
        "tasks": {
            "type": "object"
        },
        "pass": {
            "enum": [false]
        },
        "planName": {
            "type": "string"
        },
        "verbose": {
            "enum": [true, 1, 2]
        }
    },
    "definitions": {
    }
}
