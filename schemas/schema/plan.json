{
    "$schema": "core://default.api/strict#",
    "title": "JSON Schema to validate an API Validator plan",
    "id": "core://default.api/plan#",
    "type": "object",
    "required": ["requestYaml", "planName"],
    "additionalProperties": false,
    "properties": {
        "requestYaml": {
            "type": "string"
        },
        "prefix": {
            "type": "string"
        },
        "requestConfig": {
            "$ref": "core://default.api/requests#/definitions/requestConfig",
            "default": {
                "yqlConfig": {
                    "endpoint": "https://query.yahooapis.com/v1/public/yql",
                    "qs": {
                        "format": "json",
                        "diagnostics": true
                    }
                }
            }
        },
        "schemaDir": {
            "type": "string"
        },
        "reportJSON": {
            "type": "string"
        },
        "requestHelper": {
            "type": "string",
            "default": "./requestHelper"
        },
        "schemas": {
            "type": "object"
        },
        "pass": {
            "enum": [false]
        },
        "planName": {
            "type": "string"
        },
        "verbose": {
            "enum": [true]
        }
    },
    "definitions": {
    }
}
