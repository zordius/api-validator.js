{
    "$schema": "core://default.api/strict#/definitions/definition",
    "title": "Common JSON Schema Definitions",
    "id": "core://default.api/common#",
    "definitions": {
        "uniqueArray": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true
        },
        "utctime": {
            "description": "http://en.wikipedia.org/wiki/ISO_8601",
            "type": "string",
            "pattern": "^\\d\\d\\d\\d-\\d\\d-\\d\\dT\\d\\d:\\d\\d:\\d\\dZ$"
        },
        "languageTag": {
            "description": "http://tools.ietf.org/html/rfc4647",
            "type": "string",
            "pattern": "^.+-.+$"
        }
    }
}
