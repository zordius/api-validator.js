{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "JSON Schema to validate all YQL related thing",
    "id": "core://yahoo.com/yql#",
    "required": ["title", "$schema", "type"],
    "definitions": {
        "statement": {
            "type": "string",
            "pattern": "((show tables)|((select|delete|insert|update) .+ from .+( where .+)))"
        },
        "result": {
            "allOf": [
                {"$ref": "core://default.api/result#"},
                {"properties": {
                    "response": {
                        "properties": {
                            "body": {
                                "$ref": "#/definitions/body"
                            }
                        }
                    }
                }}
            ]
        },
        "body": {
            "type": "object",
            "required": ["query"],
            "properties": {
                "query": {
                    "$ref": "#/definitions/query"
                }
            }
        },
        "query": {
            "type": "object",
            "required": ["count", "created", "lang", "diagnostics", "results"],
            "properties": {
                "count": {
                    "$ref": "http://json-schema.org/draft-04/schema#/definitions/positiveInteger"
                },
                "created": {
                    "$ref": "core://default.api/common#/definitions/utctime"
                }
            }
        }
    }
}
