{
    "$schema": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/strict.json#",
    "title": "Strict JSON Schema to validate other JSON Schema",
    "id": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/strict.json#",
    "type": "object",
    "anyOf": [
        {"$ref": "#/definitions/strictSchema"},
        {"$ref": "#/definitions/strictOneOfSchema"},
        {"$ref": "#/definitions/strictAnyOfSchema"},
        {"$ref": "#/definitions/strictAllOfSchema"}
    ],
    "definitions": {
        "strictPproperties": {
            "allOf": [
                {
                    "$ref": "http://json-schema.org/draft-04/schema#"
                },
                {
                    "properties": {
                        "$schema": {
                            "format": "uri",
                            "default": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/strict.json#"
                        },
                        "type": {
                            "enum": ["array", "object"]
                        }
                    }
                }
            ]
        },
        "strictSchema": {
            "allOf": [
                {
                    "$ref": "#/definitions/strictPproperties"
                },
                {
                    "required": ["title", "$schema", "type"]
                }
            ]
        },
        "strictOneOfSchema": {
            "allOf": [
                { "$ref": "#/definitions/strictPproperties" },
                { "required": ["title", "$schema", "oneOf"] }
            ]
        },
        "strictAnyOfSchema": {
            "allOf": [
                { "$ref": "#/definitions/strictPproperties" },
                { "required": ["title", "$schema", "anyOf"] }
            ]
        },
        "strictAllOfSchema": {
            "allOf": [
                { "$ref": "#/definitions/strictPproperties" },
                { "required": ["title", "$schema", "allOf"] }
            ]
        },
        "definition": {
            "allOf": [
                { "$ref": "#/definitions/strictPproperties" },
                { "required": ["title", "$schema", "definitions"] }
            ]
        },
        "refSchema": {
            "type": "object",
            "required": ["$ref"],
            "additionalProperties": false,
            "properties": {
                "$ref": {
                    "type": "string",
                    "pattern": "^(.+)?#/.+$"
                }
            }
        },
        "localRef": {
            "type": "object",
            "required": ["$ref"],
            "additionalProperties": false,
            "properties": {
                "$ref": {
                    "type": "string",
                    "pattern": "^#/.+$"
                }
            }
        },
        "allOfSchemas": {
            "type": "object",
            "required": ["allOf"],
            "properties": {
                "allOf": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                        "$ref": "#/definitions/refSchema"
                    }
                }
            }
        }
    }
}
