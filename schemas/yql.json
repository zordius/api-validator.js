{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "JSON Schema to validate all YQL related thing",
    "id": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/yql.json#",
    "definitions": {
        "statement": {
            "type": "string",
            "pattern": "((show tables)|((select|delete|insert|update) .+ from .+( where .+)))"
        },
        "result": {
            "allOf": [
                {"$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/result.json#"},
                {"properties": {
                    "response": {
                        "properties": {
                            "body": {
                                "$ref": "#/definitions/body"
                            }
                        }
                    }
                }}
            ]
        },
        "body": {
            "type": "object",
            "required": ["query"],
            "properties": {
                "query": {
                    "$ref": "#/definitions/query"
                }
            }
        },
        "query": {
            "type": "object",
            "required": ["count", "created", "lang", "diagnostics", "results"],
            "properties": {
                "count": {
                    "$ref": "http://json-schema.org/draft-04/schema#/definitions/positiveInteger"
                },
                "created": {
                    "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/common.json#/definitions/utctime"
                },
                "lang": {
                    "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/common.json#/definitions/languageTag"
                },
                "diagnostics": {
                    "publiclyCallable": {
                        "enum": ["true", "false"]
                    },
                    "user-time": {
                        "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/common.json#/definitions/integerString"
                    },
                    "service-time": {
                        "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/common.json#/definitions/integerString"
                    },
                    "build-version": {
                        "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/common.json#/definitions/version"
                    }
                },
                "results": {
                    "type": ["object", "array", "null"]
                }
            }
        },
        "security": {
            "enum": ["ANY", "USER", "APP"]
        },
        "schema": {
            "allOf": [
                {"$ref": "http://json-schema.org/draft-04/schema#"},
                {"$ref": "#/definitions/strictYQLResultSchema"}
            ]
        },
        "strictYQLResultSchema": {
            "allOf": [
                {"$ref": "core://default.api/strict#/definitions/allOfSchemas"},
                {"required": ["definitions"]}
            ]
        }
    }
}
