{
    "$schema": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/strict.json#",
    "title": "JSON Schema to validate an API Validator request list",
    "id": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/requests.json#",
    "allOf": [
        { "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/common.json#/definitions/uniqueArray" },
        {
            "items": {
                "oneOf": [
                   { "$ref": "#/definitions/request" },
                   { "$ref": "#/definitions/yqlrequest" }
                ]
            }
        }
    ],
    "definitions": {
        "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "DELETE"]
        },
        "yqlrequest": {
            "required": ["yql", "yqlConfig"],
            "not": {
                "required": [ "url" ]
            },
            "dependencies": {
                "yql": {
                    "$ref": "#/definitions/requestConfig"
                }
            }
        },
        "request": {
            "required": [ "url" ],
            "not": {
                "required": [ "yql" ]
            },
            "dependencies": {
                "url": { "$ref": "#/definitions/requestConfig" }
            }
        },
        "requestConfig": {
            "type": "object",
            "properties": {
                "url": {
                    "format": "uri"
                },
                "timeout": {
                    "$ref": "http://json-schema.org/draft-04/schema#/definitions/positiveInteger"
                },
                "qs": {
                    "type": "object"
                },
                "method": {
                    "$ref": "#/definitions/method"
                },
                "yql": {
                    "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/yql.json#/definitions/statement"
                },
                "yqlConfig": {
                    "$ref": "#/definitions/yqlConfig"
                },
                "schema": {
                    "type": "string"
                },
                "json": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        },
        "yqlConfig": {
            "type": "object",
            "required": ["endpoint"],
            "properties": {
                "endpoint": {
                    "type": "string"
                }
            }
        },
        "processed": {
            "allOf": [
                { "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/common.json#/definitions/uniqueArray" },
                {
                    "items": { "$ref": "#/definitions/request" }
                },
                {
                    "items": { "required": ["schema"]}
                }
            ]
        }
    }
}
