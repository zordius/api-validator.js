{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "JSON Schema to validate request result",
    "id": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/result.json#",
    "required": ["input", "response", "body"],
    "type": "object",
    "properties": {
        "input": {
            "$ref": "https://raw.githubusercontent.com/zordius/api-validator.js/master/schemas/requests.json#/definitions/requestConfig"
        },
        "response": {
            "$ref": "#/definitions/responseObject"
        },
        "body": {
            "type": ["array", "boolean", "integer", "null", "number", "object", "string"]
        }
    },
    "definitions": {
        "responseObject": {
            "type": "object",
            "required": ["statusCode", "statusMessage", "httpVersion", "complete", "headers", "rawHeaders"],
            "properties": {
                "statusCode": {
                    "type": "number"
                },
                "statusMessage": {
                    "type": "string"
                },
                "httpVersion": {
                    "type": "string"
                },
                "complete": {
                    "type": "boolean"
                },
                "headers": {
                    "type": "object"
                },
                "rawHeaders": {
                    "type": "array"
                }
            }
        }
    }
}
